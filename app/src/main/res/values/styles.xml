<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialButton" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <!-- Customize your theme here. -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
        <item name="backgroundTint">@color/change_profile_btn</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="spinnerTheme">
        <item name="backgroundColor">@color/milestone_bg</item>
    </style>
</resources>