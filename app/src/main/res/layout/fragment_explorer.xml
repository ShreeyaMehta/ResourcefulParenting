<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ExplorerFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/add_child"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:src="@drawable/add_child"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginEnd="20dp"
           android:layout_marginTop="30dp"
           app:layout_constraintTop_toTopOf="parent"
           android:contentDescription="@string/add_child" />

       <androidx.cardview.widget.CardView
           android:id="@+id/child_name"
           android:layout_width="100dp"
           android:layout_height="30dp"
           android:layout_marginTop="10dp"
           android:layout_marginStart="30dp"
           android:layout_marginLeft="30dp"
           app:cardCornerRadius="20dp"
           app:layout_constraintTop_toBottomOf="@id/add_child"
           app:layout_constraintStart_toStartOf="parent">
           <Spinner
               android:id="@+id/spin_child_name"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               style="@style/spinnerTheme"
               android:background="@color/milestone_bg"/>

       </androidx.cardview.widget.CardView>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="60dp"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/child_name">

       <ImageView
           android:id="@+id/language"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginTop="20dp"
           android:layout_marginStart="120dp"
           android:src="@drawable/language"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:id="@+id/logic"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:src="@drawable/logic"
           android:layout_marginTop="60dp"
           android:layout_marginEnd="25dp"
           app:layout_constraintStart_toEndOf="@id/language"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:id="@+id/physical"
           android:layout_width="90dp"
           android:layout_height="90dp"
           android:layout_marginTop="15dp"
           android:src="@drawable/physical"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/logic" />

           <ImageView
                android:id="@+id/intrapersonal"
                android:layout_width="90dp"
                android:layout_height="90dp"
               android:layout_marginEnd="60dp"
                android:src="@drawable/intrapersonal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/physical" />

                <ImageView
                   android:id="@+id/interpersonal"
                   android:layout_width="90dp"
                   android:layout_height="90dp"
                    android:layout_marginEnd="20dp"
                   android:src="@drawable/interpersonal"
                   app:layout_constraintEnd_toStartOf="@id/intrapersonal"
                    app:layout_constraintTop_toBottomOf="@id/physical"/>

           <ImageView
               android:id="@+id/spatial"
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_marginTop="15dp"
               android:src="@drawable/spatial"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/logic" />

            <ImageView
                 android:id="@+id/music"
                 android:layout_width="90dp"
                 android:layout_height="90dp"
                 android:layout_marginTop="60dp"
                android:layout_marginStart="25dp"
                 android:src="@drawable/music"
                app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent" />

               <ImageView
                  android:id="@+id/environment"
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:src="@drawable/environment"
                  app:layout_constraintStart_toEndOf="@id/spatial"
                  app:layout_constraintTop_toBottomOf="@+id/music"
                   app:layout_constraintEnd_toStartOf="@id/physical"/>

       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>